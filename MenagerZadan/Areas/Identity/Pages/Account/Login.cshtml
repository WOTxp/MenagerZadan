@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}


 <div class="col-md-10 offset-md-1">
    <section>
        <div class="d-flex login-form-icon justify-content-center mt-3">
            <i class="fas fa-user-circle fa-9x text-secondary"></i>
        </div>
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label class="form-label">Hasło</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="col-auto btn btn-lg btn-primary btn-block">Zaloguj</button>
                </div>
        </form>
    </section>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
